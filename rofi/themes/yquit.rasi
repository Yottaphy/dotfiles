entry {
  padding: 0 0px 0 0 ;
}

listview {
  cycle: true;
  margin: 0 0 0px 0;
  scrollbar: false;
}

element {
  padding: 2 0 2px 0px;
}

element selected {
  background-color: #fba922;
  highlight: bold; 
}

element-text {
  horizontal-align: 0.5;
}
