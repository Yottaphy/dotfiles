configuration {
    kb-row-up: "k";
    kb-row-down: "j";
}

* {
  background-color: #1d1f21;
  border-color: #fba922;
  text-color: #fba922;
  font: "UbuntuMono Nerd Font 18";
}

#window {
  border: 4 4 4 4;
  spacing: 5;
  width: 150px;
  height: 132px;
  children:   [ listview ];
}
